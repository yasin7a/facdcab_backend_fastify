# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
PORT=9095
PROJECT_NAME=FACDCAB

# ============================================================================
# URLS
# ============================================================================
BASE_URL=http://localhost:9095
CLIENT_URL=http://localhost:3000

# ============================================================================
# DATABASE
# ============================================================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/facdcab?schema=public

# ============================================================================
# REDIS (Optional - for session storage and rate limiting)
# ============================================================================
# REDIS_URL=redis://default:password@localhost:6379

# ============================================================================
# AUTHENTICATION
# ============================================================================
# Secret key for JWT signing (use strong random string in production)
ACCESS_TOKEN_SECRET=your-super-secret-key-change-this-in-production

# Auth mode (true = less secure, false = production ready)
DEVELOPMENT_PRODUCTION_UNSAFE_AUTH=false

# Cookie domain (use for subdomain sharing, e.g., .company.com)
COOKIE_DOMAIN=

# ============================================================================
# OAUTH PROVIDERS
# ============================================================================

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth (optional)
# GITHUB_CLIENT_ID=your-github-client-id
# GITHUB_CLIENT_SECRET=your-github-client-secret

# Facebook OAuth (optional)
# FACEBOOK_CLIENT_ID=your-facebook-client-id
# FACEBOOK_CLIENT_SECRET=your-facebook-client-secret

# ============================================================================
# EMAIL SERVICE (for verification emails, password reset, etc.)
# ============================================================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-specific-password

# ============================================================================
# SECURITY
# ============================================================================
# Turnstile (Cloudflare CAPTCHA)
DISABLE_TURNSTILE_SECURITY=true

# ============================================================================
# ANALYTICS
# ============================================================================
# PostHog
POST_HOG_HOST=https://us.i.posthog.com
POST_HOG_API_KEY=your-posthog-api-key

# ============================================================================
# PAYMENT GATEWAY (SSLCommerz)
# ============================================================================
SSLCOMMERZ_STORE_ID=your-store-id
SSLCOMMERZ_STORE_PASSWORD=your-store-password
SSLCOMMERZ_IS_LIVE=false

# ============================================================================
# ADMIN
# ============================================================================
SUPER_ADMIN_MAIL=admin@example.com
